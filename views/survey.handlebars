  <script type="text/javascript">
    // Chosen CSS
    var config = {
      ".chosen-select": {},
      ".chosen-select-deselect": {
        allow_single_deselect: true
      },
      ".chosen-select-no-single": {
        disable_search_threshold: 10
      },
      ".chosen-select-no-results": {
        no_results_text: "Oops, nothing found!"
      },
      ".chosen-select-width": {
        width: "95%"
      }
    };
    for (var selector in config) {
      $(selector).chosen(config[selector]);
    }
    // Capture the form inputs
    $("#submit").on("click", function(event) {
      event.preventDefault();
      console.log("One");
      // Form validation
      function validateForm() {
        console.log("two");
        var isValid = true;
        $(".form-control").each(function() {
          if ($(this).val() === "") {
            isValid = false;
          }
        });
        $(".chosen-select").each(function() {
          if ($(this).val() === "") {
            isValid = false;
          }
        });
        return isValid;
      }
      // If all required fields are filled
      if (validateForm()) {
        console.log("three");
        // Create an object for the user"s data

        // Img link
        // Decision up to you guys
        var userData = {
          name: $("#name").val(),
          email: $("#email").val(),
          zipcode: $("#zipcode").val(),
          scores: [$("#q1").val(), $("#q2").val()]

         // img: $("#q5").val()
            
        };
        // AJAX post the data to the friends API
        $.post("/api/submit", userData, function(data) {
          console.log(`Post: ${JSON.stringify(data)}`);

        }).then(function(ownerdata){
            console.log(`Then: ${JSON.stringify(ownerdata)}`);
            // Grab the result from the AJAX post so that the best match's name and photo are displayed.
            $("#match-name").text(ownerdata.name); // populate to the model
            $("#match-email").text(ownerdata.email);
            $("#match-scores").text(ownerdata.scores);
            $("#match-zipcode").text(ownerdata.zipcode);

            $.get("/api", function(dogdata) {
              console.log(`Get dogs: ${JSON.stringify(dogdata)}`);
              console.log(`Owner data in Get: ${JSON.stringify(ownerdata)} `);
              
              for (i=0; i < dogdata.length; i++) {

                  if (dogdata[i].score == ownerdata.scores){
                    console.log(`Dog Scores: ${dogdata[i].score}`);
                    console.log(`Owner Score: ${ownerdata.scores}`);
                    $("#match-breed").text(dogdata[i].breed);
                    $("#match-img").attr("src", dogdata[i].img); // should be image link

              } else {
                    $("#match-breed").text(dogdata[i].breed);
                    $("#match-img").attr("src", dogdata[i].img); // should be image link

              }

              }
     

                      // data from the server  {name: "", age:"", img:""}

          // Show the modal with the best match
          $("#results-modal").modal("toggle");
        });
          });
      
       } else {
        alert("Please fill out all fields before submitting!");
      }
    });
